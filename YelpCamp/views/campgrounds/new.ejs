<% layout("/layouts/boilerplate") %>

<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form
      enctype="multipart/form-data"
      action="/campgrounds"
      method="POST"
      novalidate
      class="validated-form"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Enter Title</label>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="camp-title"
          placeholder="Title"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Enter Location</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="camp-location"
          placeholder="City, State"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input
            type="text"
            class="form-control"
            aria-label="price"
            aria-describedby="price-label"
            placeholder="0.00"
            name="campground[price]"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="campground[description]"
          id="camp-description"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="uploadCampgroundImg" class="form-label">Upload Campground Images</label>
        <input name="image" class="form-control" type="file" id="uploadCampgroundImg" multiple />
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Create</button>
      </div>
    </form>
    <a href="/campgrounds">Go Back to All</a>
  </div>
</div>

<% layout("/layouts/boilerplate") %>
<h1>Edit campground</h1>
<form
  action="/campgrounds/<%= campground._id %>?_method=PUT"
  method="POST"
  novalidate
  class="validated-form"
  enctype="multipart/form-data"
>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Edit Title</label>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="camp-title"
          placeholder="Title"
          value="<%= campground.title %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Edit Location</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="camp-location"
          placeholder="City, State"
          value="<%= campground.location %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input
            type="number"
            class="form-control"
            aria-label="price"
            aria-describedby="price-label"
            placeholder="0.00"
            step="0.01"
            name="campground[price]"
            value="<%= campground.price %>"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="campground[description]"
          id="camp-description"
          required
        >
        <%= campground.description %>
      </textarea
        >
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="uploadCampgroundImg" class="form-label">Add Campground Images</label>
        <input name="image" class="form-control" type="file" id="uploadCampgroundImg" multiple />
      </div>
      <div class="mb-3">
        <% campground.images.forEach(function(img, i) { %>
          <img src="<%= img.url %> " class="img-thumbnail" alt=""> 
          <div class="form-check-inline">
            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
          </div>
          <label for="image-<%= i %>">Delete?</label>
          <% }) %> 
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Save Campground</button>
      </div>
    </form>
    <a href="/campgrounds/<%= campground._id %> ">Back to Campground</a>
  </div>
</form>

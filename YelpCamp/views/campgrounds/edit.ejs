<body>
<h1>Edit campground</h1>
<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <label for="title">Edit Title</label>
    <input type="text" name="campground[title]" id="camp-title" value="<%= campground.title %>" placeholder="Title">
    <label for="location">Edit Location</label>
    <input type="text" name="campground[location]" id="camp-location" value="<%= campground.location %>" placeholder="City, State">
    <button>Edit</button>
</form>
    <a href="/campgrounds">Cancel edit</a>

<div class="container">
  <h1><%= farm.name %></h1>
  <ul>
    <li>City: <% if(!farm.location) { %> N/A <% } else { %> <%= farm.location %><% } %> </li>
    <li>Farm Email: <%= farm.email %></a></li>
  </ul>  
  <h2>Products</h2>
  <% if(farm.products.length === 0) { %> There are no products to show <% } else { %>  
<ul>
    <% for(let product of farm.products) { %> 
    <li><a href="/products/<%= product._id %> "><%= product.name %></a> </li>
    <% } %> 
</ul>
<% } %> 
<br>
  <a href="/farms/<%= farm._id %>/products/new">Add Products For This Farm</a>
  <a href="/farms">All Farms</a>
  <form action="/farms/<%= farm._id %>?_method=delete" method="post">
    <button>Delete Farm</button>
  </form>
</div>


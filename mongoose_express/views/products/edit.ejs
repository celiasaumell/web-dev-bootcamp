<%- include("partials/header") %>
<div class="container">
    <form action="/products/<%= product._id %>?_method=put" method="post">
      <section>
        <label for="name">Change Product Name</label>
        <input type="text" name="name" id="product-name" value="<%= product.name %> " />
      </section>
      <section>
        <label for="price">Change Product Price</label>
        <input type="number" name="price" id="product-price" value="<%= product.price %> " />
      </section>
      <section>
        <label for="category">Change Category</label>
        <select name="category" id="category-select">
          <option value="dairy">Dairy</option>
          <option value="fruit">Fruit</option>
          <option value="vegetable">Vegetable</option>
        </select>
      </section>
  
      <button>Submit New Product</button>
    </form>
  </div>
<%- include("partials/footer") %>
